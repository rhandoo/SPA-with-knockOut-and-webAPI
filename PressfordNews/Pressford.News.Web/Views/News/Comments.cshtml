<h2>Comments</h2>

<table data-bind="with : commentModel">
    <thead>
        <tr><th>Name</th><th>Comment</th></tr>
    </thead>
    <tbody data-bind="foreach: comments">
        <tr>
            <td data-bind="text: CommentedBy"></td>
            <td data-bind="text: Text"></td>
        </tr>
    </tbody>
</table>

<div data-bind="foreach: comments">
    <div data-bind="text: Text()"></div>
</div>